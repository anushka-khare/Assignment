<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/doc_type_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:gravity="center"
        android:background="@drawable/bg_white_stroke"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dl_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:checked="true"
            android:textColor="@color/white"
            android:text="@string/dl" />

        <RadioButton
            android:id="@+id/aadhar_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:textColor="@color/white"
            android:text="@string/aadhar_card" />

        <RadioButton
            android:id="@+id/voter_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:textColor="@color/white"
            android:text="@string/voter_id" />
    </RadioGroup>

    <TextView
        android:id="@+id/front_view_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_type_rg"
        android:layout_margin="@dimen/_12sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:textColor="@color/white"
        android:text="@string/front_view"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/choose_front_img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/front_view_lbl"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_cloud_upload_24" />

    <RelativeLayout
        android:id="@+id/front_preview_layout"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/front_view_lbl"
        android:layout_margin="@dimen/_12sdp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/preview_front_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_image"
            android:scaleType="fitCenter"
            android:padding="@dimen/_4sdp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/remove_front_preview"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_round_cancel" />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_below="@+id/front_preview_layout"
        android:background="@color/hint_white" />

    <TextView
        android:id="@+id/back_view_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:layout_below="@+id/separator"
        android:layout_margin="@dimen/_12sdp"
        android:text="@string/back_view"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/choose_back_img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/back_view_lbl"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_cloud_upload_24" />

    <RelativeLayout
        android:id="@+id/back_preview_layout"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/back_view_lbl"
        android:layout_margin="@dimen/_12sdp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/preview_back_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/bg_image"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/remove_back_preview"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_round_cancel" />
    </RelativeLayout>

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/back_preview_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_12sdp"
        android:background="@drawable/bg_btn"
        android:text="@string/upload"
        android:textColor="@color/black_80"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>