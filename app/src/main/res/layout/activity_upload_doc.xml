<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/doc_type_rg"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/dl_rb"
            android:text="@string/dl"
            android:checked="true"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/aadhar_rb"
            android:text="@string/aadhar_card"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/voter_rb"
            android:text="@string/voter_id"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:id="@+id/front_view_lbl"
        android:text="@string/front_view"
        android:textStyle="bold"
        android:textColor="@color/textBlack"
        android:layout_margin="@dimen/_12sdp"
        android:layout_below="@+id/doc_type_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/choose_front_img"
        android:layout_below="@+id/front_view_lbl"
        android:src="@drawable/ic_baseline_cloud_upload_24"
        android:layout_margin="@dimen/_20sdp"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"/>

    <RelativeLayout
        android:id="@+id/front_preview_layout"
        android:visibility="invisible"
        android:layout_below="@+id/front_view_lbl"
        android:layout_margin="@dimen/_12sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp">
        <ImageView
            android:id="@+id/preview_front_img"
            android:background="@color/colorAccent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/remove_front_preview"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_round_cancel"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/front_preview_layout"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp" />

    <TextView
        android:id="@+id/back_view_lbl"
        android:text="@string/back_view"
        android:textStyle="bold"
        android:textColor="@color/textBlack"
        android:layout_margin="@dimen/_12sdp"
        android:layout_below="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/choose_back_img"
        android:layout_below="@+id/back_view_lbl"
        android:src="@drawable/ic_baseline_cloud_upload_24"
        android:layout_margin="@dimen/_20sdp"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"/>

    <RelativeLayout
        android:id="@+id/back_preview_layout"
        android:visibility="invisible"
        android:layout_below="@+id/back_view_lbl"
        android:layout_margin="@dimen/_12sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp">
        <ImageView
            android:id="@+id/preview_back_img"
            android:background="@color/colorAccent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/remove_back_preview"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_round_cancel"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/upload_btn"
        android:text="@string/upload"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/back_preview_layout"
        android:layout_margin="@dimen/_12sdp"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>